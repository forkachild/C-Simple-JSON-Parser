{
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "command": "/usr/bin/clang",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-O0",
        "-DJSON_DEBUG",
        "${workspaceFolder}/*.c",
        "-o",
        "${workspaceFolder}/bin/a.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "C build task"
    }
  ],
  "version": "2.0.0"
}
